{%- extends 'layouts/base.njk' -%}

{%- block sidebar -%}

{%- endblock -%}

{%- block main -%}
  <h1>Skills and capabilities assessment</h1>

  <hr>

  <div class="chart-container" id="all">
    <h2>
      Team
    </h2>
    <div class="charts">
      {%- for key, value in team.charts -%}
        <div>
          <h3 class="chart-header">
            {{value.title}}
          </h3>
          {{value.svg.element|safe}}
        </div>
      {%- endfor -%}
    </div>
  </div>

  <hr>


  {%- for designer in Designer.all -%}
    <div class="chart-container" id="designer-{{designer.id}}">
      <h2>
        Designer: {{designer.id}}
      </h2>
      <div class="charts">
        {%- for key, value in designer.charts -%}
          <div>
            <h3 class="chart-header">
              {{value.title}}
            </h3>
            {{value.svg.element|safe}}
          </div>
        {%- endfor -%}
      </div>
    </div>

    <hr>
  {%- endfor -%}

{%- endblock -%}