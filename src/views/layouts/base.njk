<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, viewport-fit=cover">
    
    <title>{{title}} - {{site.name}}</title>
    <meta name="title" content="{{page.title}}">
    <meta name="description" content="{{meta.description}}">

    <link rel="icon" href="data:image/svg+xml,%3Csvg%20xmlns='http://www.w3.org/2000/svg'%20viewBox='0%200%20100%20100'%3E%3Ctext%20y='.9em'%20font-size='90'%3EðŸ“ˆ%3C/text%3E%3C/svg%3E">
    <style>{{css}}</style>
    {%- block headEnd -%}{%- endblock -%}
  </head>
  <body>
    <div class="box">
      <a class="skip-link" href="#main">Skip to main content</a>
    </div>

    <div class="with-sidebar">
      <div class="sidebar">
        {%- block sidebar -%}{%- endblock -%}
      </div>

      <div class="not-sidebar">
        {%- block beforeMain -%}{%- endblock -%}
        <main id="main">
          <div class="box">
            {%- block main -%}{%- endblock -%}
          </div>
        </main>
      </div>
      {%- block afterMain -%}{%- endblock -%}
    </div>

    <footer>
      <p>
        Copyright stuff
      </p>
    </footer>

    <script>
      let isProcessingFocus = false
      function bringSliceGroupToFront (event) {
        if (isProcessingFocus) return
        isProcessingFocus = true
        var child = event.target
        var parent = child.parentNode;
        child.blur()
        parent.appendChild(child);
        child.focus()
        isProcessingFocus = false
      }
      function overrideTabOrder() {
        let tabIndex = 1;
        const selectors = [
          'a[href]:not([tabindex="-1"])',
          'button:not([disabled]):not([tabindex="-1"])',
          'input:not([type="hidden"]):not([disabled]):not([tabindex="-1"])',
          'select:not([disabled]):not([tabindex="-1"])',
          'textarea:not([disabled]):not([tabindex="-1"])',
          '[tabindex]:not([tabindex="-1"])',
          '[contenteditable="true"]:not([tabindex="-1"])',
        ];

        const elements = document.querySelectorAll(selectors.join(','));
        elements.forEach(function (element) {
          element.tabIndex = tabIndex++;
        });
      }
      function addEventListeners () {
        var sliceGroups = document.querySelectorAll('.slice');
        sliceGroups.forEach(function (group) {
          group.addEventListener('focus', bringSliceGroupToFront);
        });
      }

      document.addEventListener('DOMContentLoaded', function() {
        overrideTabOrder()
        addEventListeners()
      });
    </script>
  </body>
</html>
